<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a917b1"
    tools:context=".menu_level">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="150dp"
            android:text="Menu Level"
            android:gravity="center"
            android:textSize="50dp"
            android:textColor="#15ece1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/lvl1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btnlvl1"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/lvl2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btnlvl2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/lvl3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btnlvl3"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>